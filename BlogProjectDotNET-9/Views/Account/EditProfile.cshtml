@model EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Profile</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditProfile" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="fullName" class="form-label">Full Name</label>
                            <input asp-for="fullName" class="form-control" />
                            <span asp-validation-for="fullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Current Profile Picture</label><br />
                            <img src="@Model.ExistingImagePath" alt="Current Profile Image" class="rounded-circle mb-3" width="150" height="150" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfileImage" class="form-label">Upload New Picture</label>
                            <input asp-for="ProfileImage" class="form-control" type="file" />
                            <span asp-validation-for="ProfileImage" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                            <a asp-action="ViewProfile" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
