@model ProfileViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow rounded-4 p-4 text-center">

                <div class="position-relative">
                    <img src="@Model.ProfilePictureUrl" class="rounded-circle border border-3 border-white shadow" width="120" height="120" style="object-fit: cover; margin-top: -80px;" />
                </div>

                <h4 class="mt-3 fw-bold text-primary">@Model.FullName</h4>
                <p class="text-muted mb-1">@Model.UserName</p>
                <p class="text-muted small">@Model.Email</p>

                <hr />

                <div class="text-start px-3">
                    <p><i class="bi bi-envelope text-secondary me-2"></i><strong>Email:</strong> @Model.Email</p>
                    <p><i class="bi bi-person-vcard text-secondary me-2"></i><strong>Username:</strong> @Model.UserName</p>
                    <p>
                        <i class="bi bi-person-lines-fill text-secondary me-2"></i><strong>Roles:</strong>
                        @foreach (var role in Model.Role)
                        {
                            <span class="badge bg-info text-dark me-1">@role</span>
                        }
                    </p>
                    <p><i class="bi bi-calendar-check text-secondary me-2"></i><strong>Joined:</strong> @Model.RegisteredAt.ToString("yyyy-MM-dd")</p>
                </div>

                <div class="mt-4">
                    <a asp-controller="Account" asp-action="EditProfile" class="btn btn-outline-primary">
                        <i class="bi bi-pencil-square me-1"></i> Edit Profile
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
