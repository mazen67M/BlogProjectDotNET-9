@model BlogProjectDotNET_9.Models.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">
        <i class="bi bi-pencil-square"></i> Edit Category
    </h2>

    <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-semibold"></label>
            <textarea asp-for="Description" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save2"></i> Update
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
