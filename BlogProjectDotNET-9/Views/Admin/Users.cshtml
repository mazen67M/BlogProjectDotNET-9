@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
            <th>Is Approved</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="ChangeRole" method="post">
                        <input type="hidden" name="id" value="@user.Id" />
                        <select name="newRole" class="form-select form-select-sm">
                            <option value="User">User</option>
                            <option value="Author">Author</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <button class="btn btn-sm btn-warning mt-1" type="submit">Change</button>
                    </form>
                </td>
                <td>
                    @if (!user.IsApproved)
                    {
                        <form asp-action="Approve" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button class="btn btn-sm btn-success">Approve</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                </td>
                <td>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
