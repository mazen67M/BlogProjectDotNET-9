@model PostViewModel

@{
    ViewData["Title"] = "Create Post";
}


<style>
    .content-wrapper{
        padding: 20px;
        max-width:1000px;
        margin: 0 auto;
        font-family:sans-serif;
    }
</style>


<div class="content-wrapper">
    <div class="row">
        <div class="col-6">
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="col-6 text-end">
            <a href="#" class="btn btn-dark"> Back To List</a>
        </div>
    </div>
    <hr />

    <form asp-action="Create" asp-controller="Post" method="post" enctype="multipart/form-data">
        <div class="validation-summary">
            <div asp-validation-summary="All" class="text-danger">

            </div>
        </div>
        <div class="form-group">
            <label asp-for="Post.Title"></label>
            <input asp-for="Post.Title" type="text" class="form-control" name="name" placeholder="Enter The Title" />
            <span asp-validation-for="Post.Title" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <label asp-for="Post.CategoryId">Category</label>
            <select asp-for="Post.Category" asp-items="Model.Categories" class="form-control">
                <option value="Select Category">Select Category</option>
            </select>
            <span asp-validation-for="Post.CategoryId"></span>
        </div>

        <br />
        <div class="form-group">
            <label asp-for="Post.Author"></label>
            <input asp-for="Post.Author" type="text" class="form-control" name="name" placeholder="Enter The Author Name" />
            <span asp-validation-for="Post.Author" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <label asp-for="Post.Content"></label>
            <textarea asp-for="Post.Content" type="text" class="form-control" name="name" placeholder="Enter The Post Content" ></textarea>
            <span asp-validation-for="Post.Content" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <label asp-for="FeatureImage"> Image</label>
            <input asp-for="FeatureImage" class="form-control" />
        </div>
        <br />
        <button class="btn btn-primary mt-1" type="submit" >Create</button>
        <a class="btn btn-dark mt-1">Back To List</a> 
    </form>
</div>